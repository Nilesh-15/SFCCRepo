<?xml version="1.0"?>
<form xmlns="http://www.demandware.com/xml/form/2008-04-19">

    <!-- fields for phone email -->
    	<field
		formid="email" 
		label="label.input.email.profile" 
		mandatory="true" 
		max-length="50" 
		missing-error="error.message.required"
		parse-error="error.message.parse.email.profile.form"
		range-error="error.message.50orless"
		regexp="^[\w.%+-]+@[\w.-]+\.[\w]{2,6}$" 
		value-error="ValueErrorText"
		type="string"/>
    <!-- fields for phone number -->
    <field formid="phone" 
		label="profile.phone" 
		description="address.phone.example" 
		type="string" 
		mandatory="true"
        binding="phone" 
		min-length="10"
		max-length="10" 
		regexp="[6-9]{1}[0-9]{9}"
		missing-error="error.card.info.missing.phone"
		parse-error="error.message.parse.phone.profile.form"
		range-error="error.message.between10and20" 
	/>

</form>