<?xml version="1.0" encoding="UTF-8"?>
<services xmlns="http://www.demandware.com/xml/impex/services/2014-09-26">
    <service-credential service-credential-id="credential.2factor.send.otp">
        <url>https://2factor.in/API/V1/{0}/SMS/{1}/AUTOGEN/{2}</url>
        <user-id/>
        <password encrypted="true" encryption-type="common.export"></password>
    </service-credential>

    <service-credential service-credential-id="credential.2factor.verify.otp">
        <url>https://2factor.in/API/V1/{0}/SMS/VERIFY/{1}/{2}</url>
        <user-id/>
        <password encrypted="true" encryption-type="common.export"></password>
    </service-credential>

    <service-profile service-profile-id="profile.2factor.send.otp">
        <timeout-millis>5000</timeout-millis>
        <rate-limit-enabled>false</rate-limit-enabled>
        <rate-limit-calls>0</rate-limit-calls>
        <rate-limit-millis>0</rate-limit-millis>
        <cb-enabled>true</cb-enabled>
        <cb-calls>0</cb-calls>
        <cb-millis>0</cb-millis>
    </service-profile>

    <service-profile service-profile-id="profile.2factor.verify.otp">
        <timeout-millis>5000</timeout-millis>
        <rate-limit-enabled>false</rate-limit-enabled>
        <rate-limit-calls>0</rate-limit-calls>
        <rate-limit-millis>0</rate-limit-millis>
        <cb-enabled>true</cb-enabled>
        <cb-calls>0</cb-calls>
        <cb-millis>0</cb-millis>
    </service-profile>

    <service service-id="service.2factor.send.otp">
        <service-type>HTTP</service-type>
        <enabled>true</enabled>
        <log-prefix>service_2factor_send_otp</log-prefix>
        <comm-log-enabled>false</comm-log-enabled>
        <force-prd-enabled>true</force-prd-enabled>
        <mock-mode-enabled>true</mock-mode-enabled>
        <profile-id>profile.2factor.send.otp</profile-id>
        <credential-id>credential.2factor.send.otp</credential-id>
    </service>

    <service service-id="service.2factor.verify.otp">
        <service-type>HTTP</service-type>
        <enabled>true</enabled>
        <log-prefix>service_2factor_send_otp</log-prefix>
        <comm-log-enabled>false</comm-log-enabled>
        <force-prd-enabled>true</force-prd-enabled>
        <mock-mode-enabled>true</mock-mode-enabled>
        <profile-id>profile.2factor.verify.otp</profile-id>
        <credential-id>credential.2factor.verify.otp</credential-id>
    </service>

</services>
