<isset name="billingFields" value="${pdict.forms.billingForm.addressFields}" scope="page" />
<div class="row">
    <div class="col-sm-6">
        <div class="form-group
            ${billingFields.firstName.mandatory === true ? 'required' : ''}
            ${billingFields.firstName.htmlName}">
            <iscomment> <label class="form-control-label"
                    for="billingFirstName">${Resource.msg('field.billing.address.first.name', 'address', null)}</label>
            </iscomment>
            <input autofocus type="text" class="form-control billingFirstName" id="billingFirstName" value="${pdict.order.billing.billingAddress.address && pdict.order.billing.billingAddress.address.firstName ? pdict.order.billing
                                                                                                            .billingAddress.address.firstName : ''}" placeholder="${Resource.msg('field.shipping.address.first.name', 'address', null)}" <isprint
                value=${billingFields.firstName.attributes} encoding="off" />
            autocomplete="given-name" >
            <div class="invalid-feedback"></div>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="form-group
            ${billingFields.lastName.mandatory === true ? 'required' : ''}
            ${billingFields.lastName.htmlName}">
            <iscomment> <label class="form-control-label"
                    for="billingLastName">${Resource.msg('field.billing.address.last.name', 'address', null)}</label>
            </iscomment>
            <input type="text" class="form-control billingLastName" id="billingLastName" value="${pdict.order.billing.billingAddress.address && pdict.order.billing.billingAddress.address.lastName ? pdict.order.billing
                                                                                                .billingAddress.address.lastName : ''}" placeholder="${Resource.msg('field.shipping.address.last.name', 'address', null)}" <isprint
                value=${billingFields.lastName.attributes} encoding="off" />
            autocomplete="family-name">
            <div class="invalid-feedback"></div>
        </div>
    </div>
</div>

