<!--- make drop down--->
<div class="row">
    <div class="col-sm-6">
        <div class="form-group
            ${billingFields.country.mandatory === true ? 'required' : ''}
            ${billingFields.country.htmlName}">
            <iscomment> <label class="form-control-label"
                    for="billingCountry">${Resource.msg('field.billing.address.country', 'address', null)}</label>
            </iscomment>
            <select class="custom-select form-control billingCountry custom-select" id="billingCountry" <isprint
                value=${billingFields.country.attributes} encoding="off" />
            autocomplete="billing country">
            <option label=" "></option>
            <isloop items=${billingFields.country.options} var="country">
                <option id="${country.id}" value="${country.htmlValue}" ${pdict.order.billing.billingAddress.address && country.id === pdict.order.billing.billingAddress.address.countryCode
                                                                        .value ? "selected" : "selected"}>
                    ${country.label}
                </option>
            </isloop>
            </select>
            <div class="invalid-feedback"></div>

        </div>
    </div>
    <div class="col-sm-6">
        <div class="form-group
            ${billingFields.states.stateCode.mandatory === true ? 'required' : ''}
            ${billingFields.states.stateCode.htmlName}">
            <iscomment> <label class="form-control-label"
                    for="billingState">${Resource.msg('field.billing.address.state', 'address', null)}</label>
            </iscomment>
            <select class="custom-select form-control billingState custom-select" id="billingState" <isprint
                value=${billingFields.states.stateCode.attributes} encoding="off" />
            autocomplete="billing address-level1">
            <isloop items=${billingFields.states.stateCode.options} var="state">
                <option id="${state.id}" value="${state.htmlValue}" ${pdict.order.billing.billingAddress.address && state.id === pdict.order.billing.billingAddress.address.stateCode ?
                                                                    "selected" : ""}>
                    ${state.label}
                </option>
            </isloop>
            </select>
            <div class="invalid-feedback"></div>
        </div>
    </div>
</div>